<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/txt_search_tenbaihat"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Ten Bai hat"
        android:layout_toRightOf="@+id/img_search"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_search_tencasi"
        android:textSize="18sp"
        android:textColor="#6e6d6d"
        android:text="Ca si"
        android:layout_toRightOf="@+id/img_search"
        android:layout_below="@+id/txt_search_tenbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/img_search_luotthich"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/txt_search_so_luot_thich"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/custom_textview_so_luot_thich"
        android:layout_centerVertical="true"
        android:text="Likes"
        android:layout_toLeftOf="@id/img_search_luotthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>